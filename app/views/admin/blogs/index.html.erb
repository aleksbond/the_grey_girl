<table>
    <tr>
      <th>Title</th>
      <th>Published</th>
    </tr>
  <% @blogs.each do |blog| %>
  <% if blog %>
    <tr class="<%= blog.published? ? "published" : "draft" %>">
      <td><%= link_to blog.title, admin_blog_path(blog) %></td>
      <td><%= blog.published_at %></td>
      <td>
        <div class="btn-group">
          <%= link_to edit_admin_blog_path(blog), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
          <%= link_to admin_blog_publish_path(:blog_id => blog.id, :commit_publication => true), method: :put, data: { confirm: 'Are you ready to publish?'}, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-globe"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  <% end %>
</table>