<table>
    <tr>
      <th>Title</th>
      <th>Published</th>
    </tr>
  <% @blogs.each do |blog| %>
    <tr class="<%= blog.published? ? "published" : "draft" %>">
      <td><%= blog.title %></td>
      <td><%= blog.published_at %></td>
      <td>
        <div class="btn-group">
          <%= link_to edit_admin_blog_path(blog), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to admin_blog_path(blog), method: :destroy, data: { confirm: 'Are you sure?'}, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>